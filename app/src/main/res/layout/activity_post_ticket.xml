<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Station:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betFromStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Station:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betToStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Train Name:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betTrainName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Journey Date:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betJournetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Journey Time:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betJourneyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        android:inputType="none"
        app:bootstrapSize="md" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No of Seats:" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/betNoOfSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <com.beardedhen.androidbootstrap.BootstrapButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Ticket"
        android:layout_gravity="center"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"

        android:onClick="postTicketOnline"
        app:roundedCorners="true"
        app:showOutline="false" />

</LinearLayout>